alias ..="cd .."
alias lsa="ls -a"
alias ll="ls -l"
alias cdd="cd -"
alias la="ls -A -l -G"
alias c="clear"
alias cl="clear; ls -lhGt"
alias l="ls -lhGt"
alias e="exit"
alias md="mkdir -p"
alias rd="rm -r"

#RVM
alias rv="ruby -v"
alias r9="rvm 1.9.2"
alias r8="rvm system"

#Utility
alias reload='source ~/bin/dotfiles/bashrc'
alias ea='vi ~/bin/dotfiles/bash/aliases && reload' # Edit aliases
alias ee="vi ~/bin/dotfiles/bash/env && reload"
alias essh="vi ~/bin/dotfiles/ssh/config"
alias key="eval \`ssh-agent\` && ssh-add ~/.ssh/sshKey_jtucker"
alias h="history"

#Start Programs
alias ss="./script/server"
alias sc="./script/console"
alias tfo="tail -f log/*.log"
