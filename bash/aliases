alias gt='git status'
alias eg='vi .git/config'

alias git_branch="git branch 2>/dev/null | grep -e '^*' | sed -E 's/^\* (.+)$/(\1) /'"

#Custom functions
function take {
  mkdir -p "$1"
  cd "$1"
}

function cd {
  builtin cd "$1"
  ls 
}

